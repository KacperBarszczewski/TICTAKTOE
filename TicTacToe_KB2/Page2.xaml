<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToe_KB2.Page2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Text="" Padding="10" HorizontalOptions="Center" FontSize="25"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
        <Button Clicked="Button_1vs1_Clicked" Text="1 vs 1" FontAttributes="Bold" FontSize="50" TextColor="#496faf" BackgroundColor="CornflowerBlue" Grid.Row="1" Grid.ColumnSpan="3" />
        <Button Clicked="Button_1vsKOMP_Clicked" Text="1 vs KOMP" FontAttributes="Bold" FontSize="50" TextColor="#c05c39" BackgroundColor="Coral" Grid.Row="2" Grid.ColumnSpan="3" />
        <Button Clicked="Button_Lista_Clicked" Text="Lista" FontAttributes="Bold" FontSize="50"  BackgroundColor="LightGray" Grid.Row="3" Grid.ColumnSpan="3" />

    </Grid>
</ContentPage>